/**index.wxss**/
@import '../../style/weui.wxss';
@import '../../style/iconfont.wxss';
/* 轮播图 */
.slide-image {
 width: 100%;
}
page{
  background: white;
}
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color:transparent;
}
/* 最新发布 */
.goodMain{
  background: #fff;

}
.swiper-tab {
  position: relative;
  display: flex;
  flex-direction: row;
}
.swiper {
  height: 5500px;
}
.tab-item{
  /* font-size: 34rpx;
  color: #202020;
  width: 150rpx;
  margin-left: 20rpx;
  padding: 16rpx;
  float: left; */
  /* border-top: 2rpx solid #d9d9d9; */
  font-size: 28rpx;
	flex: 1;
	display: flex;
	justify-content: space-around;
	align-items: center;
	padding: 16rpx;
}
.desc{
  font-size: 30rpx;
}
.t{
  color: #000;
  font-size: 30rpx;
}
.on {
  color:#FFC700;
  border-bottom: 5rpx solid #FFC700;
}
.goodCon{
  width: 100%;
  height: 100%;
  display: flex;
  flex-wrap: wrap;
  padding-top: 20rpx;
  border-top: 2rpx solid #efefef;
  overflow: hidden;

}
.wantCon{
  margin-top: 20rpx;
}
.goodItem{
  padding: 14rpx 22rpx;
  box-sizing: border-box;
  width: 50%;
  height: 100%;
}
.goodItem_box{
  box-shadow: 0 0 20rpx rgba(0,0,0,0.2);
  border-radius: 12rpx;
}
/*奇数*/
.goodItem:nth-child(odd){
  padding-right: 12rpx;

}
/*偶数*/
.goodItem:nth-child(even){
  padding-left: 12rpx;
}
.user{
  display: flex;
  align-items: center;
  padding: 0rpx 20rpx;
  padding-bottom: 20rpx;
}
.user>image{
  display: flex;
  width: 60rpx;
  height: 60rpx;
  border-radius:50%;
  margin-right: 10rpx;
}
.userInfo{
  flex: 1;
  display: flex;
  flex-direction: column;
}
.userName{
  width: 100%;
  font-size: 26rpx;
  color: #202020;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}
.date{
  width: 100%;
  font-size: 24rpx;
  color: #9c9c9c;
}
.userStatus{
  display: flex;
  justify-content: start;
  width: 100%;
  font-size: 24rpx;
  color: #9c9c9c;
}
.imgBox{
  display: flex;
  height: 330rpx;
}
.imgBox>image{
  width: 100%;
  height: auto;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
}
.infoBox{
  width: 100%;
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  box-sizing: border-box;
}
.infoBox>view{
  width: 100%;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.infoBox>.title{
  font-size: 30rpx;
  font-weight: bold;
  color: #202020;
}
.infoBox>.price{
  color: #F56250;
  border-bottom: 1rpx solid #eee;
}
.infoBox>.price>.small{
  font-size: 24rpx;
}
/* 没有数据 */
.nodata{
  width: 100%;
  height: 100vh;
  background: #fff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  color: #999;
  font-weight: bold;
}
.nodata>image{
  width: 260rpx;
  height: 260rpx;
  vertical-align: middle;
  margin-bottom:20rpx;
}

/* 加载更多 */
.weui-loadmore {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 40rpx;
  font-size:34rpx;
  color: #999;
  margin:20rpx 0rpx;
}
.weui-loading {
  width: 60rpx;
  height: 60rpx;
  display: inline-block;
  vertical-align: middle;
  -webkit-animation: weuiLoading 1s steps(12, end) infinite;
  animation: weuiLoading 1s steps(12, end) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
  margin-right: 20rpx;
}
.weui-loadmore__tips {
  display: inline-block;
  vertical-align: middle;
}

  /*发布按钮*/
.add_con{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
 background: -webkit-linear-gradient(left,lightblue,skyblue);
  box-shadow:0rpx 0rpx 30rpx rgba(7, 205, 219, 0.705);
  position: fixed;
  right: 10rpx;
  bottom: 200rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.add_con>text{
  text-align: center;
  width: 80rpx;
  font-size: 30rpx;
  color: #fff;
}
.add_con image{
  width: 60rpx;
  height: 60rpx;
}
.want_con{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
     background: -webkit-linear-gradient(left,lightblue,skyblue);
  box-shadow:0rpx 0rpx 30rpx rgba(7, 205, 219, 0.705);
  position: fixed;
  right: 10rpx;
  bottom: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.want_con>text{
  text-align: center;
  width: 80rpx;
  font-size: 30rpx;
  color: #fff;
}

.maidiaole{
  position: absolute;
}
.maidiaole>image{
  transform:rotate(15deg);
  width: 200rpx;
  height: 90rpx;
  margin:80rpx 0 0 100rpx;
}
.xinyu{
  color: #8a8a8a;
  font-size: 26rpx;
}
.xinyu-img{
  width: 40rpx;
  height: 40rpx;
}
.section{
  float: right;
}
.choosePicker{
  padding-top: 16rpx;
  float: left;
  font-size: 34rpx;
  color: gray;
}
.school{
  padding-top: 16rpx;
  float: left;
  width: 50rpx;
  height: 50rpx;
}

/*----------公告-----------------*/
.top_notice {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  background-color: white;
}
.notice_title {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  font-weight: 800;
  color: rgb(255, 187, 0);
  padding: 10rpx;
}

.swiper_notice {
  width: 87%;
  height: 60rpx;
  line-height: 60rpx;
  font-weight: 100;
  font-size: 30rpx;
  letter-spacing: 2rpx;
}

.swiper_notice swiper-item {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
 
}
.swiper_notice swiper-item text {
  font: bold;
  font-size: 30rpx;
  color: #FFC700;
}
