/* 没有数据 */
.nodata{
  width: 100%;
  height: 100vh;
  background: #fff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  color: #999;
  font-weight: bold;
}
.nodata>image{
  width: 260rpx;
  height: 260rpx;
  vertical-align: middle;
  margin-bottom:20rpx;
}

/* 加载更多 */
.weui-loadmore {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 40rpx;
  font-size:34rpx;
  color: #999;
  margin:20rpx 0rpx;
}
.weui-loading {
  width: 60rpx;
  height: 60rpx;
  display: inline-block;
  vertical-align: middle;
  -webkit-animation: weuiLoading 1s steps(12, end) infinite;
  animation: weuiLoading 1s steps(12, end) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
  margin-right: 20rpx;
}
.weui-loadmore__tips {
  display: inline-block;
  vertical-align: middle;
}


/*底部背景图片*/
.footImg{
  width: 100%;
  height: 112rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  overflow: hidden;
}
.footImg image{
  width: 100%;
  height: 112rpx;
}

  /*发布按钮*/
.add_con{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: #F56250;
  box-shadow:0rpx 0rpx 30rpx rgba(245, 98, 80, 0.8);
  position: fixed;
  right: 10rpx;
  bottom: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.add_con>text{
  font-size: 30rpx;
  color: #fff;
}
.add_con image{
  width: 60rpx;
  height: 60rpx;
}