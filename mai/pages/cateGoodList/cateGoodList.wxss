/**index.wxss**/
@import '../../style/weui.wxss';
/* 轮播图 */
.slide-image {
 width: 100%;
}
page{
  background: #f2f2f2;
}
/*入口图标*/
.navCon{
  width: 100%;
  height: 250rpx;
  display: flex;
  background: #fff;
}
.navList{
  width: 20%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.navList image{
  width: 120rpx;
  height: 120rpx;
}
.navList text{
  font-size: 30rpx;
  color: #202020;
  margin-top: 10rpx;
}


/* 最新发布 */
.goodMain{
  background: #fff;
  min-height: 100vh;
  /* margin-top: 30rpx; */
  padding-bottom: 40rpx;
  display: flex;
  flex-direction: column;
}
.goodHead{
  /* border-left: 6rpx solid #F56250; */
  padding: 16rpx;
  display: flex;
  align-items: center;
}
.goodHead>text{
  font-size: 34rpx;
  color: #202020;
}
.goodCon{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  padding-top: 20rpx;
  border-top: 2rpx solid #efefef;
}
.goodItem{
  padding: 14rpx 22rpx;
  box-sizing: border-box;
  width: 50%;
  /* border-bottom: 2rpx solid #efefef; */
}
.goodItem_box{
  box-shadow: 0 0 20rpx rgba(0,0,0,0.2);
  border-radius: 12rpx;
}
/*奇数*/
.goodItem:nth-child(odd){
  padding-right: 12rpx;
  /* border-right: 2rpx solid #efefef; */
}
/*偶数*/
.goodItem:nth-child(even){
  padding-left: 12rpx;
  /* border-right: 2rpx solid #efefef; */
}
.user{
  display: flex;
  align-items: center;
  padding: 0rpx 20rpx;
  padding-bottom: 20rpx;
}
.user>image{
  display: flex;
  width: 60rpx;
  height: 60rpx;
  border-radius:50%;
  margin-right: 10rpx;
}
.userInfo{
  flex: 1;
  display: flex;
  flex-direction: column;
}
.userName{
  width: 100%;
  font-size: 26rpx;
  color: #202020;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}
.date{
  width: 100%;
  font-size: 24rpx;
  color: #9c9c9c;
}
.imgBox{
  display: flex;
  /* width: 330rpx; */
  height: 330rpx;
}
.imgBox>image{
  width: 100%;
  height: auto;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
}
.infoBox{
  width: 100%;
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  box-sizing: border-box;
}
.infoBox>view{
  width: 100%;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.infoBox>.title{
  font-size: 30rpx;
  color: #202020;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  height: 74rpx;
}
.infoBox>.price{
  font-size: 38rpx;
  color: #F56250;
  border-bottom: 1rpx solid #eee;
  padding-bottom: 10rpx;
}
.infoBox>.price>.small{
  font-size: 24rpx;
}
