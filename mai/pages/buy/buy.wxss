/*订单列表*/
.orderDetails{
	background: #fff;
	border-bottom: 20rpx solid #f3f3f3;
}
.orderListTitle{
	height: 100rpx;
	line-height: 100rpx;
	border-bottom: 1rpx solid #f3f3f3;
}
.orderListTitle .userImg{
	float: left;
	width: 70rpx;
	height: 70rpx;
	border-radius: 35rpx;
	margin:15rpx;
}
.orderListTitle .userImg image{
	border-radius: 35rpx;
	width: 100%;
	height: 100%;
}
.orderListTitle .userName{
	padding-right: 50rpx;
	background-size: 35rpx 35rpx;
}
.orderListTitle .orderStatus{
	float: right;
	margin-right: 20rpx;
	color: #2f7b27;
	font-size: 34rpx;
}
.orderListDetails{
	display: flex;
	height: 180rpx;
	border-bottom: 1rpx solid #f3f3f3;
}
.orderListDetails .productImg{
	flex: 1;
	height: 150rpx;
	margin-top: 20rpx;
	margin-left: 20rpx;
}
.orderListDetails .productImg image{
	width: 100%;
	height: 100%;
}
.orderListDetails .productInfo{
	flex: 4;
	padding: 20rpx 30rpx;
}
.orderListDetails .productInfo .productTitle{
	overflow: hidden;
	text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.productTime,.productNo{
  font-size: 30rpx;
  color: #9c9c9c;
}
.orderListDetails .productInfo .productQuantity{
	float: right;
}
.productCount{
	height: 80rpx;
	line-height: 80rpx;
	border-bottom: 1rpx solid #f3f3f3;
}
.productCount>view{
	float: right;
	margin-right: -100rpx;
}
.bottom{
  display: flex;
  justify-content:space-around;
}
.comment{
    width: 120rpx;
    height: 45rpx;
    text-align: center;
    padding: 8rpx 40rpx;
    border-radius: 6rpx;
    border:1rpx solid #e6e6e6;
    font-size: 28rpx;
    color: #222222;
    margin:20rpx 0 20rpx -120rpx;  
}
.cancelTrans{
   width: 120rpx;
    height: 45rpx;
    text-align: center;
    padding: 8rpx 40rpx;
    border-radius: 6rpx;
    border:1rpx solid #e6e6e6;
    font-size: 28rpx;
    color: #222222;
    margin:-45rpx 0 0 170rpx;  
}
/* 没有数据 */
.nodata{
  width: 100%;
  height: 100vh;
  background: #fff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  color: #999;
  font-weight: bold;
}
.nodata>image{
  width: 260rpx;
  height: 260rpx;
  vertical-align: middle;
  margin-bottom:20rpx;
}
