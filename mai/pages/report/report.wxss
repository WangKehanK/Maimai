/* pages/report/report.wxss */
page{
    background: #f0f0f0;
}
.report{
    display: flex;
    flex-direction: column;
    align-items: center;
}
.reportBox{
    width: 100%;
    box-sizing: border-box;
    margin-top: 10rpx;
    background: #fff;
    padding: 30rpx;
}
.reportBox>textarea{
    font-size: 30rpx;
    color: #262626;
}
.report_btn{
    margin-top: 30rpx;
    width: 95%;
    height: 100rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    color: #fff;
    background: #F56250;
    border-radius: 50rpx;
    font-size: 38rpx;
}