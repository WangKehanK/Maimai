.swiper-tab {
  display: flex;
  flex-direction: row;
}
.swiper {
  height: 5500px;
}
.tab-item{
  font-size: 34rpx;
  color: #202020;
  width: 150rpx;
  margin-left: 20rpx;
  /* border-bottom: 6rpx solid #F56250; */
  padding: 16rpx;
  float: left;
}
.desc{
  font-size: 30rpx;
}
.t{
  color: #000;
  font-size: 30rpx;
}
.on {
  color:red;
  border-bottom: 5rpx solid red;
}
.meBottom{
    width: 100%;
}
.goodCon{
    width: 100%;
}
.goodItem{
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding:20rpx 30rpx;
    box-sizing: border-box;
    background: #fff;
    margin-bottom: 15rpx;
}
.goodItem_box{
    display: flex;
    padding-bottom: 10rpx;
}
.goodItem_box>.imgBox{
    width: 23%;
}
.goodItem_box>.imgBox>image{
    width: 150rpx;
    height: 150rpx;
}
.goodItem_box>.infoBox{
    width: 77%;
    display: flex;
    flex-direction: column;
    padding:10rpx 20rpx;
    box-sizing: border-box;
}
.goodItem_box>.infoBox>.title{
    font-size: 32rpx;
    color: #303030;
    font-weight: bold;
    overflow: hidden;
    text-overflow:ellipsis;
    white-space: nowrap;
}
.goodItem_box>.infoBox>.price{
    font-size: 38rpx;
    color: #F56250;
    padding-top: 10rpx;    
    padding-bottom: 10rpx;
}
.goodItem_box>.infoBox>.price>.small{
    font-size: 24rpx;
}
.goodItem_box>.infoBox>.cate{
    font-size: 26rpx;
    color: #8b8b8b;
}
.handle{
    width: 100%;
    display: flex;
    justify-content: flex-end;
    border-bottom: 1rpx solid #e9e9e9;
    padding: 20rpx 0rpx 0rpx;
}
.del{
    width: 200rpx;
    height: 45rpx;
    text-align: center;
    padding: 8rpx 40rpx;
    border-radius: 6rpx;
    border:1rpx solid #e6e6e6;
    font-size: 28rpx;
    color: #222222;
    margin-left: 20rpx;
}
.maidiaole{
  position: absolute;
}
.maidiaole>image{
  transform:rotate(15deg);
  width: 200rpx;
  height: 90rpx;
  margin-left: 300rpx;
}
.nodata{
    width: 100%;
    height: 600rpx;
    /* background: #fff; */
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    font-size: 32rpx;
    color: #999;
    font-weight: bold;
}
.nodata>image{
    width: 260rpx;
    height: 260rpx;
    vertical-align: middle;
    margin-bottom:20rpx;
} 