/* pages/me/me.wxss */
.me{

}
.meTop{
    position: relative;
    width: 100%;
    height: 400rpx;
}
.meTopBg{
    width: 100%;
    height: 400rpx;
    position: absolute;

    top: 0;
    left: 0;
}
.meTopBg>image{
    width: 100%;
    height: 100%;
    
}
.meTopuserInfo{
    width: 100%;
    height: 380rpx;
    position: absolute;
    top:0;
    left: 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    transform: translateY(-40rpx);
    background: linear-gradient(skyblue,lightblue,pink); 
}
.meTopuserIcon{

}
.meTopuserIcon>image{
    width: 150rpx;
    height: 150rpx;
    border-radius: 50%;
    border: 6rpx solid #fff;
}
.meTopuserName{
    font-size: 34rpx;
    color: #fff;
    margin-top: 10rpx;
}

.meBottom{
    padding-bottom: 50rpx;
}
.goodCon{
    width: 100%;
    display: flex;
    flex-wrap: wrap;
    padding-top: 20rpx;
    border-top: 2rpx solid #efefef;
}
.goodItem{
    padding: 14rpx 22rpx;
    box-sizing: border-box;
    width: 50%;
    /* border-bottom: 2rpx solid #efefef; */
}
.goodItem_box{
    box-shadow: 0 0 20rpx rgba(0,0,0,0.2);
    border-radius: 12rpx;
}
  /*奇数*/
.goodItem:nth-child(odd){
    padding-right: 12rpx;
}
  /*偶数*/
.goodItem:nth-child(even){
    padding-left: 12rpx;
}
.imgBox{
  display: flex;
  /* width: 330rpx; */
  height: 330rpx;
}
.imgBox>image{
  width: 100%;
  height: auto;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
}
.infoBox{
  width: 100%;
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  box-sizing: border-box;
}
.infoBox>view{
  width: 100%;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.infoBox>.title{
  font-size: 30rpx;
  color: #202020;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  height: 74rpx;
}
.infoBox>.price{
  font-size: 38rpx;
  color: #F56250;
  padding-bottom: 10rpx;
}
.infoBox>.price>.small{
  font-size: 24rpx;
}

.nodata{
    width: 100%;
    background: #fff;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    font-size: 32rpx;
    color: #999;
    font-weight: bold;
}
.nodata>image{
    width: 260rpx;
    height: 260rpx;
    vertical-align: middle;
    margin-bottom:20rpx;
}
  