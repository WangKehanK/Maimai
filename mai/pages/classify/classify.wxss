/* pages/classify/classify.wxss */
.classify{
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
}
.cate_item{
    width: 33.3%;
    height: 110rpx;
    box-sizing: border-box;
    padding: 16rpx;
}
.cate_item>view{
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    background: linear-gradient(skyblue,lightblue); 
    color: #666;
    font-size: 32rpx;
    border-radius: 14rpx;
}
.cate_item.active>view{
    background: #F56250;
    color: #fff;
}

.cate_submit{
    width: 90%;
    height: 100rpx;
    border-radius: 50rpx;
    display:flex;
    justify-content: center;
    align-items: center;
    background: #F56250;
    color: #fff;
    margin:150rpx auto;
}
